<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginStart="40sp"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginRight="40sp"
        app:srcCompat="@drawable/group_280_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Empresa brasileira, fundada em 2006 em Goiânia, com extensão em Brasília.
Atuante na área da comunicação e sustentabilidade, desenvolvendo projetos de meio ambiente voltados para, educação, cultura, inclusão, bem-estar e networking." />

    <Button
        android:id="@+id/btnAtualizarTudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sincronizar com painel"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView2"/>

    <Button
        android:id="@+id/btnEnviarPainel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar para o painel"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnAtualizarTudo"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnUploadArquivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload de arquivos"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnEnviarPainel"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnAtualizarFlora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar flora"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnAtualizarTudo"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnAtualizarFauna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar fauna"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnAtualizarFlora"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnAtualizarFauna"/>
</RelativeLayout>
